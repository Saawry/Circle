<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/reset_pass_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <RelativeLayout
        android:background="@drawable/lay_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/app_circle_icon"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            />
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reset_pass_email"
            android:layout_alignParentStart="true"
            android:layout_below="@id/login_image"
            android:hint="Email"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress"
            />
        <Button
            android:id="@+id/reset_pass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_pass_email"
            android:layout_marginTop="10dp"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            />
    </RelativeLayout>
</LinearLayout>